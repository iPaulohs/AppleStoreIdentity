@page
@model AppleStoreIdentity.Pages.DeleteDeviceModel
@{
}

@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir</h1>

<h3>Tem certeza que deseja excluir este produto?</h3>
<div>
    <hr />
    <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm">
            <div class="card-header py-3">
                <h4 class="my-0 fw-normal">@Html.DisplayFor(model => model.Device.Name)</h4>
            </div>
            <div class="card-body">
                <h1 class="card-title pricing-card-title">R$@Html.DisplayFor(model => model.Device.Price)</h1>
                <p class="lead">
                    @Html.DisplayFor(model => model.Device.Description)
                </p>
                <form method="post">
                    <input type="hidden" asp-for="Device.Id" />
                    <input type="submit" value="Excluir" class="btn btn-danger" />
                    <a asp-page="/Index">Voltar</a>
                </form>
            </div>
        </div>
    </div>
</div>